<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlesLayout.PaginaEstilo">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="ColorLetra">Red</Color>
            <Color x:Key="ColorFondo">Aqua</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                   FontSize="50"
                   TextColor="{StaticResource Key=ColorLetra}"
                   BackgroundColor="{StaticResource Key=ColorFondo}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>